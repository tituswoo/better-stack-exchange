{
	"manifest_version": 2,

	"name": "Better Stack Exchange",
	"description": "Improves Stack Exchange in various ways",
	"version": "0.0.1",
	"permissions": [],
	"content_scripts": [
		{
			"matches": [
				"*://*.stackoverflow.com/*",
				"*://*.serverfault.com/*",
				"*://*.superuser.com/*",
				"*://*.askubuntu.com/*",
				"*://*.stackapps.com/*",
				"*://*.mathoverflow.net/*",
				"*://*.stackexchange.com/*"
			],
			"js": ["content/index.js"]
		}
	]
}
