{
	"manifest_version": 2,

	"name": "Better Stack Exchange",
	"description": "Improves Stack Exchange in various ways",
	"version": "0.0.1",
	"permissions": [
		"tabs",
		"activeTab",
		"background",
		"http://*/"
	],
	"content_scripts": [
		{
			"matches": [
				"http://meta.stackexchange.com/posts/*/edit",
				"http://meta.stackexchange.com/questions/ask"
			],
			"js": ["content/index.js"]
		}
	]
}
